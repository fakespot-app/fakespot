html
  head
    meta(charset="utf-8")
    meta(content="ie=edge" http-equiv="x-ua-compatible")
    meta(content="width=device-width, initial-scale=1" name="viewport")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Material+Icons|Lato:300,400,700,800")

    each css in htmlWebpackPlugin.files.css
      link(href=css rel="stylesheet")

    title=htmlWebpackPlugin.options.title || 'FakeSpot'

  body
    #app

    each chunk in htmlWebpackPlugin.files.chunks
      script(src=chunk.entry)

    if htmlWebpackPlugin.options.devServer
      script(src=htmlWebpackPlugin.options.devServer + "/webpack-dev-server.js")

    script(src="https://code.createjs.com/createjs-2015.11.26.min.js")
    script(src="/animate/lock.js")
    script(src="/animate/fox.js")